#include <stdio.h>

/**
 * is_palindrome - Check if a number is a palindrome.
 * @num: The number to check.
 *
 * Return: 1 if the number is a palindrome, 0 otherwise.
 */
int is_palindrome(int num) {
    int reversed = 0, original = num;

    while (num > 0) {
        reversed = reversed * 10 + num % 10;
        num /= 10;
    }

    return original == reversed;
}

/**
 * main - Find the largest palindrome made from the product of two 3-digit numbers.
 *
 * Return: Always 0.
 */
int main(void) {
    int max_palindrome = 0;

    for (int i = 100; i < 1000; i++) {
        for (int j = 100; j < 1000; j++) {
            int product = i * j;
            if (is_palindrome(product) && product > max_palindrome) {
                max_palindrome = product;
            }
        }
    }

    // Save the result in the specified file
    FILE *file = fopen("102-result", "w");
    if (file != NULL) {
        fprintf(file, "%d", max_palindrome);
        fclose(file);
    }

    return 0;
}
